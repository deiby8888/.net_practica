@model List<ClientModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="Register" asp-controller="CrudController1" class="btn btn-success">register new client</a>
<a asp-action="listarBooks" asp-controller="CrudController1" class="btn btn-success">see books</a>

<hr />
<div class="card">
    <div class="card-header">
        Listar
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>id</th>
                    <th>name</th>
                    <th>email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.id_user</td>
                        <td>@item.userName</td>
                        <td>@item.email</td>
                        <td width="160px" style="text-align:center">
                            <a asp-action="Edit" asp-controller="CrudController1" class="btn btn-primary btn-sm" asp-route-IdUser="@item.id_user">edit</a>
                            <a asp-action="Delete" asp-controller="CrudController1" class="btn btn-danger btn-sm" asp-route-IdUser="@item.id_user">delete</a>
                        </td>
                    </tr>
                }
               
            </tbody>
        </table>
    </div>
</div>

